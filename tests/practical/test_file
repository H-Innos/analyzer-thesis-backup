#include <stdio.h>
#include <stdlib.h>

void allocateMemory() {
    int *ptr = malloc(sizeof(int));
    
    if (ptr != NULL) {
        *ptr = 42;

        // Your code that uses 'ptr'

        printf("Value: %d\n", *ptr);

        free(ptr);
    } else {
        fprintf(stderr, "Memory allocation failed.\n");
    }
}

int main() {
    allocateMemory();

    // Additional code if needed

    return 0;
}
